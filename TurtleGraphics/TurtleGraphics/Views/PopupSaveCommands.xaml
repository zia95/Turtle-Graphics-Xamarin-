<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:local="clr-namespace:TurtleGraphics"
             xmlns:cview="clr-namespace:TurtleGraphics.Views"
             x:Class="TurtleGraphics.Views.PopupSaveCommands" ControlTemplate="{x:StaticResource PopupTemplate}" Title="SAVE COMMANDS">
    
    <pages:PopupPage.Resources>
        <ResourceDictionary Source="Resource.xaml"/>
    </pages:PopupPage.Resources>
    
    <pages:PopupPage.Content>
      <StackLayout Orientation="Horizontal">
            <Entry x:Name="txtName" Placeholder="Save Name" BackgroundColor="{StaticResource SecondaryColor2}" PlaceholderColor="{StaticResource SecondaryColor1}" TextColor="{StaticResource SecondaryColor1}" 
                   VerticalOptions="Center" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            <ImageButton x:Name="btnSave" BackgroundColor="{StaticResource SecondaryColor1}" 
                         VerticalOptions="Center" HorizontalOptions="End" Margin="10, 0, 0, 0"
                         Aspect="AspectFit" Source="{local:ImageResource TurtleGraphics.Resources.images.btn_popup_save_small.png}"/>
        </StackLayout>
  </pages:PopupPage.Content>
</pages:PopupPage>